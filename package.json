{
    "name": "decopro",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "packageManager": "pnpm@9.15.0",
    "scripts": {
        "build": "turbo run build",
        "clean": "turbo run clean",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "test:coverage": "turbo run test:coverage",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "type-check": "turbo run type-check",
        "dev": "turbo run dev",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
        "upgrade": "pnpm run -w build && changeset version && pnpm install && changeset publish",
        "precommit": "pnpm run format && pnpm run lint:fix && pnpm run type-check",
        "ci": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run test:coverage && pnpm run build",
        "optimize": "node -r tsx/cjs scripts/optimize-build.ts",
        "optimize:prod": "node -r tsx/cjs scripts/optimize-build.ts --production",
        "performance": "node scripts/simple-performance.js",
        "analyze": "pnpm run performance && pnpm run optimize",
        "setup": "pnpm install && pnpm run optimize && pnpm run build"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@decopro/ast": "workspace:*",
        "@decopro/cli": "workspace:*",
        "@decopro/commander": "workspace:*",
        "@decopro/core": "workspace:*",
        "@decopro/docs": "workspace:*",
        "@decopro/dpml": "workspace:*",
        "@decopro/mcp": "workspace:*",
        "@decopro/orm": "workspace:*",
        "@decopro/platform-axios": "workspace:*",
        "@decopro/platform-node": "workspace:*",
        "@decopro/rest": "workspace:*",
        "@decopro/test": "workspace:*",
        "@modelcontextprotocol/sdk": "^1.13.0",
        "@types/node": "^24.0.3",
        "axios": "^1.10.0",
        "commander": "^14.0.0",
        "reflect-metadata": "^0.2.2",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.5",
        "@types/jest": "^29.5.0",
        "@types/node": "^24.0.3",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "depcheck": "^1.4.7",
        "eslint": "^8.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.3",
        "turbo": "^2.5.4",
        "typedoc": "^0.28.5",
        "typedoc-plugin-markdown": "^4.7.0",
        "typescript": "^5.0.0"
    }
}
