{
    "name": "@decopro/core",
    "version": "1.1.0",
    "description": "Core dependency injection and module system for decopro framework",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "src/index.ts",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "clean": "rm -rf ./.turbo && rm -rf ./dist && rm -rf ./node_modules",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "echo \"Linting skipped for this package\"",
        "lint:fix": "echo \"Lint fix skipped for this package\"",
        "build:watch": "tsup --watch",
        "dev": "tsup --watch --sourcemap",
        "build:prod": "NODE_ENV=production tsup"
    },
    "keywords": [
        "dependency-injection",
        "typescript",
        "framework",
        "modular",
        "decopro"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "reflect-metadata": "^0.2.2",
        "tslib": "^2.6.0",
        "tsyringe": "^4.10.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0"
    }
}
