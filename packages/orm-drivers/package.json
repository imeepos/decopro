{
  "name": "@decopro/orm-drivers",
  "version": "1.1.0",
  "description": "Database drivers for @decopro/orm",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "orm",
    "database",
    "drivers",
    "sqlite",
    "mysql",
    "postgresql",
    "typescript"
  ],
  "author": "DecoPro Team",
  "license": "ISC",
  "dependencies": {
    "@decopro/orm": "workspace:*",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.7",
    "mysql2": "^3.10.1",
    "pg": "^8.12.0"
  },
  "peerDependencies": {
    "@decopro/orm": "^1.1.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
