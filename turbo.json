{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalEnv": ["NODE_ENV"],
    "globalDependencies": [
        "tsconfig.json",
        "turbo.json",
        "pnpm-workspace.yaml",
        "tsup.config.base.ts"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "env": ["NODE_ENV"]
        },
        "clean": {
            "dependsOn": ["^clean"],
            "cache": false
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.ts", "src/**/*.test.ts", "jest.config.js"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "test:coverage": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "lint": {
            "outputs": [],
            "inputs": ["src/**/*.ts", ".eslintrc.js"]
        },
        "lint:fix": {
            "cache": false,
            "outputs": []
        },
        "type-check": {
            "dependsOn": ["^build"],
            "outputs": [],
            "inputs": ["src/**/*.ts", "tsconfig.json"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
